LXI H, 0100
MOV a m
MOV b a

INX h
MOV a m
MOV c a ;Inicializar C como el mínomo
MOV d a ;Inicializar D como el máximo
DCR b

SIGUIENTE_VALOR: INX h
MOV a m
CMP c
JC NUEVO_MIN ;Si a < c
JMP NUEVO_MAX ;Sino

NUEVO_MIN: MOV c a

NUEVO_MAX: CMP d
JC VUELTA ;Si a<=d
MOV d a ;Si a > d

VUELTA: DCR B
JNZ SIGUIENTE_VALOR ;Va a repetir el bucle mientras b != 0
MOV a c
OUT 00
MOV a d
OUT 01
HLT